@{
    ViewData["Title"] = "Home Page";
}

@section Hero {
    <!-- Hero Section with Video -->
    <style>
        .hero-video-container {
            position: relative;
            width: 100%;
            height: 90vh;
            overflow: hidden;
        }

            .hero-video-container video {
                position: absolute;
                top: 50%;
                left: 50%;
                min-width: 100%;
                min-height: 100%;
                transform: translate(-50%, -50%);
                object-fit: cover;
            }

        .hero-video-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.35);
        }

        .hero-video-content {
            position: relative;
            z-index: 2;
            color: #fff;
            text-align: center;
            top: 50%;
            transform: translateY(-50%);
            padding: 0 1rem;
        }

            .hero-video-content h1 {
                font-weight: 800;
            }

        .hero-search {
            max-width: 640px;
            margin: 1rem auto 0;
        }
    </style>

    <div class="hero-video-container">
        <video autoplay muted loop playsinline>
            <source src="~/videos/hero-video.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <div class="hero-video-overlay"></div>

        <div class="hero-video-content">
            <h1 class="display-4">Welcome to InventoryPro</h1>
            <p class="lead">Smart Inventory & Product Management Like Never Before</p>
            <form class="d-flex justify-content-center hero-search" method="get" asp-controller="Products" asp-action="Index">
                <input name="q" class="form-control form-control-lg me-2" type="search" placeholder="Search for products..." />
                <button class="btn btn-warning btn-lg fw-bold"><i class="bi bi-search"></i> Search</button>
            </form>
        </div>
    </div>
}

