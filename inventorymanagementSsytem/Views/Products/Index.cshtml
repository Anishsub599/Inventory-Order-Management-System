@model IEnumerable<inventorymanagementSsytem.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Products</h2>
    <a asp-action="Create" class="btn btn-warning btn-lg shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Add New Product
    </a>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0">
                    <!-- Product Image -->
                    <div class="text-center bg-light" style="height: 220px;">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Name"
                                 class="img-fluid h-100 p-3" style="object-fit: contain;" />
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center h-100 text-muted">
                                <i class="bi bi-box-seam display-4"></i>
                            </div>
                        }
                    </div>

                    <!-- Product Body -->
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <p class="mb-1"><span class="fw-semibold">Price:</span> @item.Price.ToString("C")</p>
                        <p class="mb-1"><span class="fw-semibold">Stock:</span> @item.StockLevel</p>
                    </div>

                    <!-- Actions -->
                    <div class="card-footer bg-white border-0 text-center">
                        <a asp-action="Edit" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-primary me-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-info me-2"><i class="bi bi-eye-fill"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId"
                           class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center shadow-sm">
        <i class="bi bi-info-circle me-2"></i> No products available. Please add a new product.
    </div>
}
