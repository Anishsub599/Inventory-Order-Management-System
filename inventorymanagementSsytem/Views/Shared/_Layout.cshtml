@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        /* Sticky Navbar */
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
            background-color: rgba(1,31,75,1); /* Initial deep navy */
            transition: background-color 0.3s ease, box-shadow 0.3s ease, padding 0.3s ease;
            padding: 1rem 1rem;
        }

            /* Scrolled effect */
            .navbar.scrolled {
                background-color: rgba(0,191,255,0.95); /* Slightly transparent on scroll */
                box-shadow: 0 6px 15px rgba(0,0,0,0.3);
                padding: 0.5rem 1rem; /* Shrink navbar */
            }

            /* Brand / Logo */
            .navbar .navbar-brand {
                display: flex;
                align-items: center;
                font-size: 1.3rem;
                transition: font-size 0.3s ease, transform 0.3s ease;
            }

                .navbar .navbar-brand img {
                    height: 40px;
                    width: auto;
                    margin-right: 10px;
                    transition: transform 0.3s ease;
                }

            .navbar.scrolled .navbar-brand img {
                transform: scale(0.8) translateY(-3px); /* Slight shrink and slide-up */
            }

            .navbar.scrolled .navbar-brand {
                font-size: 1.1rem;
            }

            /* Links */
            .navbar .nav-link {
                color: #fff;
                transition: color 0.3s ease;
            }

            .navbar.scrolled .nav-link {
                color: #011f4b;
            }

            .navbar .nav-link:hover, .navbar .nav-link:focus {
                color: #00ffff;
            }

            /* Active page highlighting */
            .navbar .nav-link.active {
                font-weight: 600;
                border-bottom: 2px solid #00ffff;
            }

            /* Buttons */
            .navbar .btn-accent {
                color: #011f4b;
                background-color: #00ffff;
                border: none;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .navbar .btn-accent:hover {
                    background-color: #008b8b;
                    color: #fff;
                }
    </style>
</head>
<body>
    <nav id="mainNavbar" class="navbar navbar-expand-lg shadow-sm">
        <div class="container-fluid">
            <!-- Logo + Brand -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.webp" alt="InventoryPro Logo" />
                InventoryPro
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Categories" ? "active" : "")" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Products" ? "active" : "")" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accDrop" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> Hello, @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <input type="hidden" name="returnUrl" value="@(Url.Action("Index", "Home"))" />
                                        <button type="submit" class="dropdown-item text-danger">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-accent ms-2" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderSection("Hero", required: false)

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        &copy; @DateTime.Now.Year - InventoryPro. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar scroll effects: color, shadow, shrink, logo slide
        const navbar = document.getElementById('mainNavbar');
        window.addEventListener('scroll', () => {
          if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
          } else {
            navbar.classList.remove('scrolled');
          }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
