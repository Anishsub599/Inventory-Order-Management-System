@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        /* Sticky Navbar */
        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
            background-color: #011f4b; /* Deep navy */
        }

            .navbar .nav-link, .navbar-brand {
                color: #fff;
            }

                .navbar .nav-link:hover, .navbar .nav-link:focus {
                    color: #00ffff; /* Electric blue accent */
                }

            .navbar .btn-accent {
                color: #011f4b;
                background-color: #00ffff;
                border: none;
            }

                .navbar .btn-accent:hover {
                    background-color: #008b8b;
                    color: #fff;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">InventoryPro</a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Products</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accDrop" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> Hello, @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Account</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <input type="hidden" name="returnUrl" value="@(Url.Action("Index", "Home"))" />
                                        <button type="submit" class="dropdown-item text-danger">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-accent ms-2" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderSection("Hero", required: false)

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        &copy; @DateTime.Now.Year - InventoryPro. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
